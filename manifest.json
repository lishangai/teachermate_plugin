{
  "manifest_version": 3,
  "name": "微助教PPT下载器Pro",
  "version": "3.2",
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest",
    "downloads",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.wezhujiao.com/*",
    "*://vip.ow365.cn/*",
    "*://app.teachermate.com.cn/*",
    "*://*.teachermate.com.cn/*",
    "*://*.teachermate.cn/*",
    "*://*.officeapps.live.com/*",
    "*://view.officeapps.live.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icon32.png"
    }
  },
  "content_scripts": [{
    "matches": [
        "*://*.wezhujiao.com/*", 
        "*://*.teachermate.com.cn/*",
        "*://*.teachermate.cn/*",
        "*://*.officeapps.live.com/*",
        "*://view.officeapps.live.com/*"
    ],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [{
    "resources": ["*.woff2"],
    "matches": ["*://*/*"]
  }]
} 